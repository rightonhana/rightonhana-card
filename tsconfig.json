{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"listEmittedFiles": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"newLine": "LF",
		"noEmitOnError": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": [
		"./src/**/*.ts"
	]
}